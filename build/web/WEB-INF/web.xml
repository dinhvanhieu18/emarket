            <url-pattern>/userInfo.jsp</url-pattern>
            <url-pattern>/changePassword.jsp</url-pattern>
            <url-pattern>/purchased.jsp</url-pattern>
            <url-pattern>/checkoutAdminDone.jsp</url-pattern>
            <url-pattern>/ordering.jsp</url-pattern>
            <url-pattern>/search.jsp</url-pattern>
            <url-pattern>/quantityProduct.jsp</url-pattern>
            <url-pattern>/addCategory.jsp</url-pattern>
            <url-pattern>/editCategory.jsp</url-pattern>
            <url-pattern>/customerManagement.jsp</url-pattern>
            <url-pattern>/customerInfo.jsp</url-pattern>
            <!-- và các trang khác -->
            <include-prelude>/WEB-INF/jspf/header.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/footer.jspf</include-coda>
        </jsp-property-group>
        <!-- optional for admin GUI -->
        <jsp-property-group>
            <description>JSP configuration for the admin console
            </description>
            <url-pattern>/admin/*</url-pattern>
            <include-prelude>/WEB-INF/jspf/header.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/footer.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>
</web-app>
