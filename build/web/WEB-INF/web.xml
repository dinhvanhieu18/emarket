    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>controller.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckoutDoneServlet</servlet-name>
        <servlet-class>controller.CheckoutDoneServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderingServlet</servlet-name>
        <servlet-class>controller.OrderingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PurchasedServlet</servlet-name>
        <servlet-class>controller.PurchasedServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllProductServlet</servlet-name>
        <servlet-class>controller.AllProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>controller.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllCategoryServlet</servlet-name>
