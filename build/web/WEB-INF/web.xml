    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/ControllerServlet</url-pattern>
        <url-pattern>/index</url-pattern>
        <url-pattern>/category</url-pattern>
        <url-pattern>/product</url-pattern>
        <url-pattern>/addToCart</url-pattern>
        <url-pattern>/viewCart</url-pattern>
        <url-pattern>/updateCart</url-pattern>
        <url-pattern>/purchase</url-pattern>
        <url-pattern>/checkout</url-pattern>
        <url-pattern>/checkoutAd</url-pattern>
        <url-pattern>/delete</url-pattern>
        <url-pattern>/edit</url-pattern>
        <url-pattern>/editCategory</url-pattern>
        <url-pattern>/deleteCategory</url-pattern>
        <url-pattern>/addProduct2</url-pattern>
        <url-pattern>/updateQuantity</url-pattern>
        <url-pattern>/customerInfo</url-pattern>
        <url-pattern>/customerOrdering</url-pattern>
        <url-pattern>/customerPurchased</url-pattern>
