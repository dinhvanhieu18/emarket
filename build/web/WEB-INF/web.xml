    </servlet>
    <servlet>
        <servlet-name>CheckoutAdminServlet</servlet-name>
        <servlet-class>controller.CheckoutAdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditProductServlet</servlet-name>
